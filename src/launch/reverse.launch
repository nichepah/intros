<launch>
  <node
    pkg="turtlesim"
    type="turtlesim_node"
    name="turtlesim"
    respawn="true"
    ns="rev"
   >
    <remap
     from="turtle1/cmd_vel"
     to="turtle1/cmd_vel_reversed"
    />
  </node>
  <node
    pkg="turtlesim"
    type="turtle_teleop_key"
    name="teleop_key"
    required="true"
    launch-prefix="xterm -e"
    ns="rev"
  />
  <node
    pkg="intros"
    type="vel_rev"
    name="reversing_node"
    respawn="true"
    ns="rev"
  />
</launch>
